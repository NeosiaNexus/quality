{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": ".",
		"noEmit": true,
		"exactOptionalPropertyTypes": false,
		"noPropertyAccessFromIndexSignature": false
	},
	"include": ["bin/**/*.ts", "tsup.config.ts"],
	"exclude": ["node_modules", "bin/**/*.js"]
}
